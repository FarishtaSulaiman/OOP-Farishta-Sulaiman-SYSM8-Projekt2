<Window x:Class="FitnessTrack.View.WorkoutDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessTrack.View"
        mc:Ignorable="d"
    Title="Workout Details" Width="800" Height="600" Background="#2A2A2A"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Stil för rundade knappar -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF5757" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Definiera kolumner och rader för layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Sidomeny -->
        <StackPanel Background="#333" Grid.Column="0" Grid.RowSpan="3" VerticalAlignment="Stretch">
            <!-- Användarnamn högst upp i sidomenyn -->
            <TextBlock Text="{Binding CurrentPerson.Username}" FontSize="18" FontWeight="SemiBold" 
                       Foreground="White" Margin="10,20,10,10" TextAlignment="Center"/>

            <!-- Rundade knappar -->
            <Button Content="Edit" Command="{Binding EditWorkoutCommand}" 
                    Style="{StaticResource RoundedButtonStyle}" Margin="10,5"/>
            <Button Content="Copy" Command="{Binding CopyWorkoutCommand}" 
                    Style="{StaticResource RoundedButtonStyle}" Margin="10,5"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" 
                    Style="{StaticResource RoundedButtonStyle}" Margin="10,5"/>
        </StackPanel>

        <!-- Huvudinnehåll -->
        <StackPanel Grid.Column="1" Grid.Row="0" Background="#FAFAFA" Margin="20">
            <TextBlock Text="Workout Details" FontSize="24" FontWeight="Bold" 
                       Foreground="#333" Margin="0,10,0,10" HorizontalAlignment="Center" />
        </StackPanel>

        <!-- ListView för träningspassdetaljer med Notes inkluderad -->
        <ListView Grid.Column="1" Grid.Row="1" ItemsSource="{Binding WorkoutDetails}" 
                  Background="White" Foreground="Black" BorderBrush="Gray" BorderThickness="1"
                  Margin="20" Padding="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="70"/>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="80"/>
                    <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding Duration}" Width="70"/>
                    <GridViewColumn Header="Dis. (km)" DisplayMemberBinding="{Binding Distance}" Width="70"/>
                    <GridViewColumn Header="Reps" DisplayMemberBinding="{Binding Reps}" Width="70"/>
                    <GridViewColumn Header="Calories" DisplayMemberBinding="{Binding Calories}" Width="70"/>
                    <GridViewColumn Header="Notes" DisplayMemberBinding="{Binding Notes}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Save-knapp längst ner till höger -->
        <Button Content="Save" Command="{Binding SaveWorkoutCommand}" 
                Style="{StaticResource RoundedButtonStyle}" Width="70" Height="35" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Grid.Column="1" Grid.Row="2" Margin="0,0,20,20"/>
    </Grid>
</Window>