<Window x:Class="FitnessTrack.View.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessTrack.View"
        mc:Ignorable="d"
       Title="Info" Width="400" Height="450" WindowStartupLocation="CenterScreen">
    <Grid Background="White" Margin="20">

        <Image Source="/Bilder/löpare.jpg" 
       Stretch="Fill" 
       Opacity="0.3" 
       HorizontalAlignment="Stretch" 
       VerticalAlignment="Stretch"/>


        <TextBlock Text="FitnessTrack är en träningsapplikation som hjälper dig att komma igång med din träning på riktigt. Här kan du lägga till, ta bort och visa detaljer för dina tidigare träningspass. Vårt mål är att hjälpa dig att hålla koll på din träning och nå dina träningsmål.
                                                                                   Tack för att du använder FitnessTrack!"
                   TextWrapping="Wrap" FontSize="16" Foreground="Black" VerticalAlignment="Center"  FontWeight="Regular"
                   FontFamily="Arial"
                   HorizontalAlignment="Center" TextAlignment="Center" />
    </Grid>
</Window>